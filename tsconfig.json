{
  "compilerOptions": {
    "outDir": "./built/",
    "sourceMap": true,
    "strict": true,
    "importHelpers": true,
    "noImplicitReturns": true,
    "module": "es2015",
    "moduleResolution": "node",
    "target": "es5",
    "lib": [
      "dom",
      "es5",
      "es2015.promise",
      "esnext",
      "dom.iterable",
      "scripthost"
    ]
  },
  "include": [
    "./*",
    "./**/*",
  ],
  "exclude": [
    "~/.vscode",
    "~/.vscode/**/*",
    "~/node_modules/**/*"
  ]
}
